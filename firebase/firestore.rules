rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can only read/write their own data
      allow read, write: if isOwner(userId);
      
      // Profile subcollection
      match /profile/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Resumes subcollection
      match /resumes/{resumeId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && 
          request.resource.data.keys().hasAll(['originalText', 'createdAt']) &&
          request.resource.data.originalText is string;
        allow update: if isOwner(userId) &&
          request.resource.data.keys().hasAny(['enhancedText', 'jobRole', 'preferences', 'title', 'lastModified']);
        allow delete: if isOwner(userId);
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
